# C++ symbol in your extension
name: "wasmer"

platforms:
    x86_64-linux:
        context:
            flags: ["-std=c++14"]
            libs: ["wasmer", "rt"]
    x86_64-win32:
        context:
            libs: ["wasmer.lib", "UserEnv.lib"]
    x86_64-osx:
        context:
            libs: ["wasmer"]
            linkFlags: ["-force_load"]
